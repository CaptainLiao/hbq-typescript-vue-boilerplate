{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "noEmit": false,
        "noEmitHelpers": true,
        "importHelpers": true,
        "strictNullChecks": false,
        "allowUnreachableCode": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types",
            "node_modules/vue"
        ],
        "types": [
            "vue"
        ],
        "outDir": "./build",
        "rootDir": "./src",
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "*": [
                "*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "build",
        "**/*.test.ts",
        "temp"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}